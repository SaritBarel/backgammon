<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="center"
    android:background="@color/loginBackground">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_backgammon_logo"
        android:layout_marginBottom="32dp"
        android:background="@drawable/logo_background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="שש בש"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/titleColor"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ברוכה הבאה למשחק!"
        android:textSize="18sp"
        android:textColor="@color/subtitleColor"
        android:layout_marginBottom="48dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="הכניסי את השם שלך"
            android:inputType="textPersonName"
            android:textSize="16sp"
            android:maxLength="20"
            android:gravity="right" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="כניסה"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        style="@style/Widget.MaterialComponents.Button" />

    <TextView
        android:id="@+id/playerStatsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/statsColor"
        android:background="@drawable/stats_background"
        android:padding="16dp"
        android:visibility="gone"
        android:gravity="center" />

</LinearLayout> 